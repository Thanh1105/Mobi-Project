<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".view.dashboard.DashboardFragment">

    <ScrollView
        android:id="@+id/layout_booking"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_150dp"
                android:src="@drawable/ic_untitled_design"
                android:contentDescription="@string/todo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/size_15dp"
                    android:paddingVertical="@dimen/size_10dp"
                    android:text="@string/area"
                    android:background="@drawable/bg_edt_white_10"
                    android:textSize="@dimen/font_size_18sp" />


                <Spinner
                    android:id="@+id/sp_city"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingHorizontal="@dimen/size_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/size_15dp"
                    android:paddingVertical="@dimen/size_10dp"
                    android:text="@string/hospital"
                    android:background="@drawable/bg_edt_white_10"
                    android:textSize="@dimen/font_size_18sp" />

                <Spinner
                    android:id="@+id/sp_hospital"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingHorizontal="@dimen/size_10dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/txt_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:paddingVertical="@dimen/size_5dp"
                android:paddingHorizontal="@dimen/size_15dp"
                android:textSize="@dimen/font_size_18sp"
                android:hint="@string/description"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/size_15dp"
                    android:paddingVertical="@dimen/size_10dp"
                    android:background="@drawable/bg_edt_white_10"
                    android:text="@string/day"
                    android:textSize="@dimen/font_size_18sp" />

                <Spinner
                    android:id="@+id/sp_day"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingHorizontal="@dimen/size_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/size_15dp"
                    android:paddingVertical="@dimen/size_10dp"
                    android:background="@drawable/bg_edt_white_10"
                    android:text="@string/time"
                    android:textSize="@dimen/font_size_18sp" />

                <Spinner
                    android:id="@+id/sp_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingHorizontal="@dimen/size_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:background="@drawable/bg_edt_white_10"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="10">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center_vertical"
                    android:paddingHorizontal="@dimen/size_15dp"
                    android:paddingVertical="@dimen/size_10dp"
                    android:background="@drawable/bg_edt_white_10"
                    android:text="@string/shift"
                    android:textSize="@dimen/font_size_18sp" />

                <Spinner
                    android:id="@+id/sp_shift"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:paddingHorizontal="@dimen/size_10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <CheckBox
                    android:id="@+id/checkBox1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="@string/policy_1"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_5dp"
                android:orientation="horizontal"
                android:weightSum="10">

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="9"
                    android:gravity="center_vertical"
                    android:text="@string/policy_2"
                    android:textSize="@dimen/font_size_15sp" />
            </LinearLayout>

            <Button
                android:id="@+id/vc_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_marginVertical="@dimen/size_10dp"
                android:layout_weight="3"
                android:textColor="@color/pr_blue"
                android:background="@drawable/bg_white_10"
                android:paddingHorizontal="@dimen/size_30dp"
                android:text="@string/submit"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/vc_layout_confirm"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:weightSum="10"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/size_20dp"
            android:layout_marginVertical="@dimen/size_40dp"
            android:background="@drawable/border2"
            android:padding="@dimen/size_20dp"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="@string/phone_number_confirm" />
            <EditText
                android:id="@+id/txt_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_10dp"
                android:layout_marginVertical="@dimen/size_15dp"
                android:layout_marginHorizontal="@dimen/size_10dp"
                android:ems="10"
                android:gravity="center"
                android:textColor="@color/black"
                android:hint="@string/phone_number"
                android:background="@drawable/bg_edt_white_10"
                android:autofillHints=""
                android:inputType="phone" />
            <ProgressBar
                android:id="@+id/progressbar_confirming"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <LinearLayout
                android:id="@+id/layout_btn_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/vc_btn_confirm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:text="@string/confirm"
                    android:layout_margin="@dimen/size_10dp"
                    android:textSize="@dimen/font_size_18sp"
                    android:textColor="@color/pr_blue"
                    android:background="@drawable/bg_white_10"
                    style="?android:attr/buttonBarButtonStyle" />

                <Button
                    android:id="@+id/vc_btn_cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_margin="@dimen/size_10dp"
                    android:text="@string/cancel"
                    android:textColor="@color/pr_blue"
                    android:background="@drawable/bg_edt_white_10"
                    android:textSize="@dimen/font_size_18sp"
                    style="?android:attr/buttonBarButtonStyle" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_not_found_slot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        android:gravity="center"
        android:padding="@dimen/size_10dp"
        android:background="@drawable/background">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_400dp"
            android:src="@drawable/ic_not_found"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/textView6"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/not_found_slot"
            android:padding="@dimen/size_20dp"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_22sp"/>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_qr_code"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:layout_margin="@dimen/size_10dp"
        android:background="@drawable/bg_edt_white_10"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/ic_untitled_design"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_notification"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/font_size_20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>